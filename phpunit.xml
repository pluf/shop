<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true">
    <testsuites>
		<testsuite name="Pluf">
			<directory>tests/Spa_REST/</directory>
		</testsuite>
    </testsuites>
    
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
</phpunit>